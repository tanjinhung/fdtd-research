set term postscript eps
set output 'l3-snapshot1.eps'
set nokey
set xlabel 'Spatial Step'
set ylabel 'Ez (V/m)'
set xtics 0,25
set mxtics 5
set mytics 4
plot [] [0:1] 'sim.2' w l lw 2

#pause(-1)
set output 'l3-snapshot2.eps'
plot [] [0:1] 'sim.3' w l lw 2

